    <style name="noidungchitiet_chitietthucung">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="buttonchitietthucung1">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="buttonchitietthucung2">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="footerchitietthucung">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="margintop20">
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="canle_dangnhap">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="buttondangnhap1">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
    </style>


    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


<!--    ==== STYLES Màn hình trang chủ người mua ===    -->

    <style name="img_logo">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="search_style">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:iconifiedByDefault">true</item>
        <item name="android:queryHint">@string/search</item>
    </style>

    <style name="btn_shopingcart_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="recycleview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="size20denthuong">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000</item>
    </style>

<!--    ChangePass-->
    <style name="edit_entercurentpass_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawableLeft">@drawable/ic_lock_black_24dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="edit_enternewpass_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:drawableLeft">@drawable/ic_lock_black_24dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="edit_enternewpassagain_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:drawableLeft">@drawable/ic_person_black_24dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="btnchangepass_style" parent="buttonchitietthucung1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">120dp</item>
    </style>

    <style name="edittext_infor_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>

    <style name="edittxt_infor_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="btnchangepass_style1" parent="buttonchitietthucung1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:background">@drawable/vienbutton</item>
    </style>

    <style name="radbrn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="titlerow_donhang">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="valuerow_donhang">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
