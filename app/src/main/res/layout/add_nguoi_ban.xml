<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/Header"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_navigate_before_black_24dp"></ImageButton>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:text="Tạo Tài Khoản"
            android:textColor="@color/white"
            android:textSize="25sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edHNgBano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ho"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">
        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/edMailNguoiBan"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mail"></EditText>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edPassNguoiBan"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pass"></EditText>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edRepassNgBan"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/repass"></EditText>
        <EditText
            android:inputType="number"
            android:id="@+id/edSDTNguoiBan"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sdt"></EditText>
        <EditText
            android:id="@+id/edDCNgBan"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/diachi"></EditText>
        <RadioGroup
            android:id="@+id/grNgBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gioitinh"></TextView>
            <RadioButton
                android:checked="true"
                android:id="@+id/rbnam"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nam"></RadioButton>
            <RadioButton
                android:id="@+id/rbnu"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nu"></RadioButton>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnTaoNgBan"
        android:layout_marginTop="50dp"

        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vienbutton"
        android:text="@string/tao"></Button>

</LinearLayout>