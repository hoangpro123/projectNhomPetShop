<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemSanPhamActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/Header">
            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_navigate_before_black_24dp">
            </Button>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_them_San_Pham"
                    style="@style/titleheader_chitietthucung">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titlesanpham"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/textThemSanPham"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edTieuDe"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:backgroundTint="@color/actionBar"
                android:textStyle="bold"
                android:textSize="@dimen/textThemSanPham"
                />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/imgThemSanPham"
                android:background="@drawable/ic_camera_alt_black_24dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edPrice"
                    android:backgroundTint="@color/actionBar"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/textThemSanPham"
                    />
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Price"
                    android:textSize="@dimen/textThemSanPham"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/shape_them_san_pham"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    android:gravity="center|top">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/thong_Tin_San_Pham"
                        android:textStyle="bold"
                        android:textSize="@dimen/textThemSanPham"
                        />

                    <EditText
                        android:id="@+id/edThongTinSanPham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/actionBar"
                        android:textStyle="bold"
                        android:textSize="@dimen/textThemSanPham"
                        />

<!--                    <TextView-->
<!--                        android:layout_marginTop="30dp"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="@string/thong_Tin_San_Pham"-->
<!--                        android:textStyle="bold"-->
<!--                        android:textSize="@dimen/textThemSanPham"-->
<!--                        />-->

<!--                    <TextView-->
<!--                        android:id="@+id/tvThongTinNguoiBan"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginLeft="10dp"-->
<!--                        android:layout_marginTop="10dp"-->
<!--                        android:layout_marginRight="10dp"-->
<!--                        android:layout_marginBottom="10dp"-->
<!--                        android:textStyle="bold"-->
<!--                        android:textSize="@dimen/textThemSanPham"-->
<!--                        />-->
                </LinearLayout>
            </ScrollView>
            <Button
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/btnDangTin"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/dang_Tin"
                android:background="@color/actionBar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/textThemSanPham"
                />
        </LinearLayout>
    </LinearLayout>


</ScrollView>