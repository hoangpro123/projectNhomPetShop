<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChiTietThuCungActivity"
    android:padding="8dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/actionBar">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/petshop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <SearchView
                android:id="@+id/searchview"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:iconifiedByDefault="true"
                android:background="#fff"
                android:queryHint="@string/search"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"

                android:background="@drawable/ic_shopping_cart_white_24dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/tvDanhMuc"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/danhmuc"
            android:gravity="center"
            android:textColor="@color/text"
            android:textSize="@dimen/spinner"/>

        <Spinner
            android:id="@+id/SpDanhMuc"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_arrow_drop_down_black_24dp"
            />
        <TextView
            android:id="@+id/tvLoai"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/loai"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/text"
            android:textSize="@dimen/spinner"/>
        <Spinner
            android:id="@+id/SpLoai"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_arrow_drop_down_black_24dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tvGia"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/gia"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text"
            android:gravity="center"
            android:textSize="@dimen/spinner"/>
        <Spinner
            android:id="@+id/SpGia"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_arrow_drop_down_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </LinearLayout>

<!--    <android.support.v7.widget.RecyclerView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_gravity="center"-->
<!--        android:id="@+id/recyclerview">-->
<!--    </android.support.v7.widget.RecyclerView>-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/recyclerview"
        />





</LinearLayout>