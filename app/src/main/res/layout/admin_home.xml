<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/Header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_home"
                style="@style/titleheader_chitietthucung">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:orientation="vertical"
        style="@style/canle_dangnhap">
        <Button
            android:id="@+id/btnquanli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_danh_muc_nguoi_ban_button"
            android:text="@string/nguoimua"
            android:textSize="@dimen/text_nguoi_ban"
            android:textColor="@color/text"
            android:layout_marginBottom="30dp"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btngiaodich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_danh_muc_nguoi_ban_button"
            android:text="@string/nguoiban"
            android:textSize="@dimen/text_nguoi_ban"
            android:textColor="@color/text"
            android:layout_marginBottom="30dp"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btnthem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_danh_muc_nguoi_ban_button"
            android:text="@string/themnguoiban"
            android:textSize="@dimen/text_nguoi_ban"
            android:textColor="@color/text"
            android:layout_marginBottom="30dp"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btnchinhsua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_danh_muc_nguoi_ban_button"
            android:text="@string/danhsachyeucauchinhsua"
            android:textSize="@dimen/text_nguoi_ban"
            android:textColor="@color/text"
            android:layout_marginBottom="30dp"
            android:padding="10dp"/>
        <Button
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDangXuat"
            android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
            android:text="@string/dangxuat"
            android:background="#00FFFFFF"
            android:textColor="@color/title_dang_xuat"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>