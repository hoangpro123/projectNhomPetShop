<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:gravity="center">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="80dp"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/shape_danh_muc_nguoi_ban_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/title"
            android:textSize="@dimen/title"
            android:textStyle="bold"
            android:textColor="@color/title"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"

        >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnToi"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_danh_muc_nguoi_ban_button"
                    android:text="@string/toi"
                    android:textSize="@dimen/text_nguoi_ban"
                    android:textColor="@color/text"
                    android:layout_marginBottom="30dp"
                    android:padding="10dp"
                    />
                <Button
                    android:id="@+id/btnThemSanPham"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_danh_muc_nguoi_ban_button"
                    android:text="@string/add"

                    android:textSize="@dimen/text_nguoi_ban"
                    android:layout_marginBottom="30dp"
                    android:padding="10dp"
                    />
                <Button
                    android:id="@+id/btnDanhSachDen"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_danh_muc_nguoi_ban_button"
                    android:text="@string/danhsachden"
                    android:textSize="@dimen/text_nguoi_ban"
                    android:layout_marginBottom="30dp"
                    android:padding="10dp"
                    />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGianHang"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/shape_danh_muc_nguoi_ban_button"
                android:text="@string/gianhang"
                android:textSize="@dimen/text_nguoi_ban"
                android:layout_marginBottom="30dp"
                android:padding="10dp"
                />
            <Button
                android:id="@+id/btnXacNhan"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/shape_danh_muc_nguoi_ban_button"
                android:text="@string/xacnhan"

                android:textSize="@dimen/text_nguoi_ban"
                android:layout_marginBottom="30dp"
                android:padding="10dp"
                />

        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_marginTop="30dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/btnDangXuat"
        android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
        android:text="@string/dangxuat"
        android:background="@color/none"
        android:textColor="@color/title"
        android:textStyle="bold"
        />
</LinearLayout>